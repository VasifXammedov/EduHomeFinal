@model HomeVM

@{ ViewData["Title"] = "Index";

               
}

<!-- Background Area Start -->
<section id="slider-container" class="slider-area">
    <div class="slider-owl owl-theme owl-carousel">
        @foreach (Slider slider in Model.Sliders)
        {<!-- Start Slingle Slide -->
                <div class="single-slide item" style="background-image: url(assets/img/slider/@slider.Image)">
                    <!-- Start Slider Content -->
                    <div class="slider-content-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7 col-md-offset-left-5">
                                    <div class="slide-content-wrapper">
                                        <div class="slide-content">
                                            @Html.Raw(slider.Title)
                                            <p>@slider.Description </p>
                                            <a class="default-btn" asp-controller="About" asp-action="Index">Learn more</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Start Slider Content -->
                </div> <!-- End Slingle Slide -->}



    </div>
</section>
<!-- Background Area End -->
<!-- Notice Start -->
<section class="notice-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left">
                    <h3>notice board</h3>
                    @foreach (Notice not in Model.Notices)
                    {
        <div class="single-notice-left mb-25 pb-25">
            <h4>@not.Title</h4>
            <p>@not.Description</p>
        </div>}


                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right">
                    @foreach (Profession prof in Model.Professions)
                    {
        <div class="single-notice-right mb-25 pb-25">
            <h3>@prof.Title</h3>
            <p>@prof.Description </p>
        </div>}


                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Choose Start -->
<section class="choose-area pb-85 pt-77">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-left-4 col-sm-8 col-md-offset-left-4">
                <div class="choose-content text-left">
                    <h2>@Model.Choose.Title</h2>
                    @Html.Raw(Model.Choose.Description)
                    <a class="default-btn" href="~/assets/course-details.html">view courses</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Choose Area End -->
<!-- Courses Area Start -->
<div class="courses-area pt-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Course course in Model.Courses)
            {
<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="single-course">
        <div class="course-img">
            <a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">
                <img src="~/assets/img/course/@course.Image" alt="course">
                <div class="course-hover">
                    <i class="fa fa-link"></i>
                </div>
            </a>
        </div>
        <div class="course-content">
            <h3><a asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">@course.Name</a></h3>
            <p>@course.Description</p>
            <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@course.Id">read more</a>
        </div>
    </div>
</div>            }


        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Event Area Start -->
<div class="event-area one text-center pt-140 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                @foreach (LatestPostDetail layer1 in Model.LatestPostDetails.Take(4))
                {
    <div class="single-event mb-35">
        <div class="event-date">
            <h3><a asp-controller="Event" asp-action="Detail">@layer1.Day <span>@layer1.Month</span></a></h3>
        </div>
        <div class="event-content text-left">
            <div class="event-content-left">
                <h4><a asp-controller="Event" asp-action="Detail">@layer1.Title</a></h4>
                <ul>
                    <li><i class="fa fa-clock-o"></i>@layer1.Date</li>
                    <li><i class="fa fa-map-marker"></i>@layer1.Location</li>
                </ul>
            </div>
            <div class="event-content-right">
                <a class="default-btn" asp-controller="Event" asp-action="Detail">join now</a>
            </div>
        </div>
    </div>}
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                @foreach (LatestPostDetail layer2 in Model.LatestPostDetails.Skip(4).Take(4))
                {
    <div class="single-event mb-35">
        <div class="event-date">
            <h3><a asp-controller="Event" asp-action="Detail">@layer2.Day <span>@layer2.Month</span></a></h3>
        </div>
        <div class="event-content text-left">
            <div class="event-content-left">
                <h4><a asp-controller="Event" asp-action="Detail">@layer2.Title</a></h4>
                <ul>
                    <li><i class="fa fa-clock-o"></i>@layer2.Date</li>
                    <li><i class="fa fa-map-marker"></i>@layer2.Location</li>
                </ul>
            </div>
            <div class="event-content-right">
                <a class="default-btn" asp-controller="Event" asp-action="Detail">join now</a>
            </div>
        </div>
    </div>}
            </div>
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @foreach (Carousel carousel in Model.Carousels)
                {

    <div class="col-md-8 col-md-offset-2 col-sm-12">
        <div class="single-testimonial">
            <div class="testimonial-info">
                <div class="testimonial-img">
                    <img src="~/assets/img/testimonial/@carousel.Image" alt="testimonial">
                </div>
                <div class="testimonial-content">
                    <p>@carousel.Description</p>
                    <h4>@carousel.Name</h4>
                    <h5>@carousel.Title</h5>
                </div>
            </div>
        </div>
    </div>}
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <!--Burda Blognan BlogDetailnen arasindaki elaqeni yaratmaq ucun yazdiq-->
            @foreach (Blog blog in Model.Blogs)
            {
<div class="col-md-4 col-sm-6 col-xs-12">
    <div class="single-blog">
        <div class="blog-img">
            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><img src="~/assets/img/blog/@blog.Image" alt="blog"></a>
            <div class="blog-hover">
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><i class="fa fa-link"></i></a>
            </div>
        </div>
        <div class="blog-content">
            <div class="blog-top">
                <p>By Alex  /  June 20, 2017  /  <i class="fa fa-comments-o"></i> 4</p>
            </div>
            <div class="blog-bottom">
                <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">@blog.Description </a></h2>
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">read more</a>
            </div>
        </div>
    </div>
</div>            }
        </div>
    </div>
</div>
<!-- Blog Area End -->
